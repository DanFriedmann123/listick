rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read any user profile (for viewing other users' profiles)
      allow read: if request.auth != null;
      // Allow users to write to their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow users to update other users' profiles for follow functionality
      allow update: if request.auth != null;
    }
    
    match /posts/{postId} {
      allow read: if true; // Anyone can read posts
      allow create: if request.auth != null; // Authenticated users can create posts
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId; // Only author can update/delete
      
      // Allow likes subcollection
      match /likes/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && 
          request.auth.uid == resource.data.authorId;
      }
    }
    
    match /demo_posts/{postId} {
      allow read: if true; // Anyone can read demo posts
      allow write: if false; // No one can modify demo posts
      
      // Allow authenticated users to create subcollections for likes and comments
      match /likes/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && 
          request.auth.uid == resource.data.authorId;
      }
    }
    

  }
}
